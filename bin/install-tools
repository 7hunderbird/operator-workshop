#!/usr/bin/env bash

set -eux

tmp=`mktemp -d`
pushd $tmp

# install bosh
wget -O /usr/local/bin/bosh https://s3.amazonaws.com/bosh-cli-artifacts/bosh-cli-3.0.1-linux-amd64
chmod +x /usr/local/bin/bosh

# install terraform
wget https://releases.hashicorp.com/terraform/0.11.5/terraform_0.11.5_linux_amd64.zip
unzip terraform_0.11.5_linux_amd64.zip
mv terraform /usr/local/bin/terraform

# install bbl
wget -O /usr/local/bin/bbl https://github.com/cloudfoundry/bosh-bootloader/releases/download/v6.6.4/bbl-v6.6.4_linux_x86-64
chmod +x /usr/local/bin/bbl

popd

rm -rf $tmp
